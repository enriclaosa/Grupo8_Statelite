#include <stdio.h>

int Cheksum(char misatge[8]){
    int i=0;
    int suma=0;
    while (misatge[i]!='\0'){
        suma =suma+misatge[i];
        i++;
    }
    suma = suma%256;
    return suma;
}
int Comprueva(char frase[],int resposta){
    int suma =0;
    int i =0;
    while (frase[i]!='\0'){
        suma =suma+frase[i];
        i++;
    }
    if (suma%256==resposta)
        return 1;
    else
        return 0;
}
int main(){
    char frase[] = ("Hola mundo!");
    int resposta = Cheksum(frase);
    int i =0;
    int suma=0;
    printf("%s|%d\n",frase,resposta);
    int resposta2 = Comprueva(frase,resposta);
    if (resposta2 ==1)
        printf("El cheksum coincide\n");
    else
        printf("El cheksum no coincide\n");
}
